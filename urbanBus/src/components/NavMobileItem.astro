---
interface Props {
    href: string;
    icon: string;
    active: boolean;
}

const { href, icon, active } = Astro.props;
---

<button>
    <a href={href}>
        <i class={`${icon} ${active ? 'text-primary' : ''}`}></i>
    </a>
</button>

<style>
    i {
        color: white; /* Cor padr√£o */
        font-size: x-large;
    }
    .text-primary {
        color: #7c7c85; /* Exemplo de cor para item ativo */
    }
</style>


